<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/argb_line">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/argb_blue_low" />

    <TextView
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="[第三方登陆]"
        android:textColor="@color/argb_blue_xh"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView 
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_qq"
            />
        <Button 
            android:id="@+id/tengxun_text"
            android:text="qq登录"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/argb_blue_xh"
            android:background="@drawable/third_login_btn_selecor"
            />
        
        <ImageView 
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_login_sina"
            />
        <Button 
            android:id="@+id/weibolog_text"
            android:text="微博"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/argb_blue_xh"
            android:background="@drawable/third_login_btn_selecor"
            />
    </LinearLayout>
</LinearLayout>