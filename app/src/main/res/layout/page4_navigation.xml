<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/iv_page_navigation" 
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:src="@drawable/menu_03" 
        android:scaleType="fitXY"/>
    <Button 
        android:id="@+id/btn_page_navigation"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_50"
        android:text="@string/_text_btn_navigation"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_50"
        android:textColor="@color/argb_ffffff"
        android:background="@drawable/bg_menu_selector"
        />
</RelativeLayout>
