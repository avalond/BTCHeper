<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEF0FC"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/name_pop_price"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="Bitstamp"
        android:textColor="#3BAFDA"
        android:textSize="@dimen/sp_20" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#4FC0E8" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        >
        <TextView 
            android:id="@+id/last_text_pop_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="最近成交价：￥120220"/>
        <TextView 
            android:id="@+id/buy_text_pop_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="买一价：￥120220"/>
        <TextView 
            android:id="@+id/sell_text_pop_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="卖一价：￥120220"/>
        <TextView 
            android:id="@+id/high_text_pop_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="最高价：￥120220"/>
        <TextView 
            android:id="@+id/low_text_pop_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="最低价：￥120220"/>
        <TextView 
            android:id="@+id/volume_text_pop_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="成交量：120220"/>
        <TextView 
            android:id="@+id/update_text_pop_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="更新时间：09-29 11:17:22"/>
    </LinearLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#4FC0E8"/>
    <Button 
        android:id="@+id/close_btn_pop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/close_btn_bg_selector"
        />
</LinearLayout>