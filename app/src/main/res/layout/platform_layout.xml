<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/pop_platm" >

    <ListView
        android:id="@+id/lv_platform_layout"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/listview_selector"
        android:divider="@color/pop_platm_line"
        android:dividerHeight="@dimen/dp_1" >
    </ListView>

    <LinearLayout
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_platform_layout"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_alignBottom="@dimen/dp_15"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn1_platform_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/ok_btn_bg_selector"
            android:minHeight="@dimen/dp_40"
            android:textColor="@color/argb_ffffff"
             />

        <Button
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/btn2_platform_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/qx_btn_bg_selector"
            android:layout_weight="1"
            android:minHeight="@dimen/dp_40"
            android:textColor="@color/argb_ffffff"
            />
    </LinearLayout>

</RelativeLayout>