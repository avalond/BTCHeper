<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/top_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentTop="true"
        android:background="@drawable/menu_bg09" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/_tv_help"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/_help_title_text"
                android:textColor="@color/argb_ffffff"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_help"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" >

            <Button
                android:id="@+id/btn_help_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/btn_newsinfo_selector"
                android:paddingLeft="@dimen/dp_8"
                android:text="@string/_back_text"
                android:textColor="@color/argb_ffffff"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_help"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <Button
                android:id="@+id/right_btn_help_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/btn_top_selector"
                android:layout_marginRight="@dimen/dp_10"
                android:text="@string/_say_to_us"
                android:textColor="@color/argb_ffffff"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_help" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/radioGroup_help"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/btn1_help"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@drawable/radio_action_selector"
                    android:button="@null"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/btn2_help"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@drawable/radio_action_selector"
                    android:button="@null"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/btn3_help"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@drawable/radio_action_selector"
                    android:button="@null"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/btn4_help"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@drawable/radio_action_selector"
                    android:button="@null"
                    android:gravity="center" />
            <!--     <RadioButton
                    android:id="@+id/btn5_help"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@drawable/radio_action_selector"
                    android:button="@null"
                    android:gravity="center" />
                <RadioButton
                    android:id="@+id/btn6_help"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@drawable/radio_action_selector"
                    android:button="@null"
                    android:gravity="center" /> -->
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>