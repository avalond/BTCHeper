<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_10" />

            <stroke android:width="@dimen/dp_2" android:color="@color/argb_tab_bg" />

            <solid android:color="@color/argb_blue_simple" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_10" />

            <stroke android:width="@dimen/dp_1" android:color="@color/argb_orange" />

            <solid android:color="@color/argb_3399ff" />
        </shape></item>
    <item android:state_checkable="false"><shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_10" />

            <stroke android:width="@dimen/dp_1" android:color="@color/argb_orange" />

            <solid android:color="@color/argb_line" />
        </shape></item>

</selector>